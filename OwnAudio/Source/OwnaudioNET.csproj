<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Desktop platforms only (Windows, Linux, macOS) -->
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <!-- Define MACOS symbol for macOS builds to enable CoreML code paths -->
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <DefineConstants>$(DefineConstants);MACOS</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>Ownaudio.Test.OwnaudioNET</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

  <PropertyGroup>
    <!-- NuGet package properties -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>OwnAudioSharp</PackageId>
    <Version>2.6.0</Version>
    <Authors>ModernMube</Authors>
    <Description>Cross-platform audio engine library for desktop platforms (Windows, Linux, macOS)</Description>
    <PackageTags>audio;cross-platform;windows;linux;macos;desktop;sound;multitrack</PackageTags>
    <RepositoryUrl>https://github.com/ModernMube/OwnAudioSharp</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageCopyright>Copyright (c) 2025 ModernMube</PackageCopyright>
    <PackageIcon>ownaudio.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>


  <!-- Common dependencies -->
  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.3.12" />
    <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
    <PackageReference Include="Melanchall.DryWetMidi" Version="8.0.3" />
    <PackageReference Include="Microsoft.ML.OnnxRuntime" Version="1.23.2" />
    <PackageReference Include="OwnAudioVst" Version="1.4.0" />
    <PackageReference Include="System.Memory" Version="4.6.3" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="10.0.103" PrivateAssets="All" />
    <PackageReference Include="System.Numerics.Tensors" Version="10.0.3" />
  </ItemGroup>

  <!-- Embedded resources -->
  <ItemGroup>
    <EmbeddedResource Include="nmp.onnx" />
    <EmbeddedResource Include="best.onnx" />
    <EmbeddedResource Include="default.onnx" />
    <EmbeddedResource Include="karaoke.onnx" />
    <EmbeddedResource Include="htdemucs.onnx" />
    <EmbeddedResource Include="basesample.bin" />
  </ItemGroup>

  <!-- NuGet package files -->
  <ItemGroup>
    <None Include="..\..\ownaudio.png" Pack="true" PackagePath="\" />
    <None Include="README.Desktop.md" Pack="true" PackagePath="\README.md" />
    <None Include="..\..\LICENSE" Pack="true" PackagePath="\" />
  </ItemGroup>

  <!-- Platform-independent logger (embedded in this assembly) -->
  <ItemGroup>
    <ProjectReference Include="..\..\Logger\Logger.csproj" />
  </ItemGroup>

  <!-- Platform-specific project references with private assets (embedded in this assembly) -->
  <ItemGroup>
    <!-- Core (always included) -->
    <ProjectReference Include="..\..\OwnAudioEngine\Ownaudio.Core\Ownaudio.Core.csproj" PrivateAssets="all" IncludeAssets="runtime" />
    <ProjectReference Include="..\..\OwnAudioEngine\Ownaudio.Native\Ownaudio.Native.csproj" PrivateAssets="all" IncludeAssets="runtime" />
  </ItemGroup>

  <!-- Desktop platform references -->
  <ItemGroup>
    <ProjectReference Include="..\..\OwnAudioEngine\Ownaudio.Windows\Ownaudio.Windows.csproj" PrivateAssets="all" IncludeAssets="runtime" />
    <ProjectReference Include="..\..\OwnAudioEngine\Ownaudio.Linux\Ownaudio.Linux.csproj" PrivateAssets="all" IncludeAssets="runtime" />
    <ProjectReference Include="..\..\OwnAudioEngine\Ownaudio.macOS\Ownaudio.macOS.csproj" PrivateAssets="all" IncludeAssets="runtime" />
  </ItemGroup>

  <!-- Ensure platform-specific projects are built before packing -->
  <Target Name="BuildPlatformProjects" BeforeTargets="GenerateNuspec">
    <MSBuild Projects="..\..\Logger\Logger.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
    <MSBuild Projects="..\..\OwnAudioEngine\Ownaudio.Core\Ownaudio.Core.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
    <MSBuild Projects="..\..\OwnAudioEngine\Ownaudio.Native\Ownaudio.Native.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
    <MSBuild Projects="..\..\OwnAudioEngine\Ownaudio.Windows\Ownaudio.Windows.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
    <MSBuild Projects="..\..\OwnAudioEngine\Ownaudio.Linux\Ownaudio.Linux.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
    <MSBuild Projects="..\..\OwnAudioEngine\Ownaudio.macOS\Ownaudio.macOS.csproj" Targets="Build" Properties="Configuration=$(Configuration);TargetFramework=net9.0" />
  </Target>

  <!-- Include platform-specific assemblies in the NuGet package -->
  <ItemGroup>
    <!-- Logger assembly -->
    <None Include="..\..\Logger\bin\$(Configuration)\net9.0\Logger.dll" Pack="true" PackagePath="lib\net9.0\" />
    <!-- Desktop (.NET 9.0) assemblies - removing Exists condition to ensure inclusion -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Core\bin\$(Configuration)\net9.0\Ownaudio.Core.dll" Pack="true" PackagePath="lib\net9.0\" />
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\bin\$(Configuration)\net9.0\Ownaudio.Native.dll" Pack="true" PackagePath="lib\net9.0\" />
    <None Include="..\..\OwnAudioEngine\Ownaudio.Windows\bin\$(Configuration)\net9.0\Ownaudio.Windows.dll" Pack="true" PackagePath="lib\net9.0\" />
    <None Include="..\..\OwnAudioEngine\Ownaudio.Linux\bin\$(Configuration)\net9.0\Ownaudio.Linux.dll" Pack="true" PackagePath="lib\net9.0\" />
    <None Include="..\..\OwnAudioEngine\Ownaudio.macOS\bin\$(Configuration)\net9.0\Ownaudio.macOS.dll" Pack="true" PackagePath="lib\net9.0\" />
  </ItemGroup>

  <!-- Include native runtime libraries in the NuGet package -->
  <ItemGroup>
    <!-- Windows x64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\win-x64\**\*.*" Pack="true" PackagePath="runtimes\win-x64" />
    <!-- Windows x86 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\win-x86\**\*.*" Pack="true" PackagePath="runtimes\win-x86" />
    <!-- Windows ARM64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\win-arm64\**\*.*" Condition="Exists('..\..\OwnAudioEngine\Ownaudio.Native\runtimes\win-arm64\')" Pack="true" PackagePath="runtimes\win-arm64" />
    <!-- Linux x64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\linux-x64\**\*.*" Pack="true" PackagePath="runtimes\linux-x64" />
    <!-- Linux ARM native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\linux-arm\**\*.*" Pack="true" PackagePath="runtimes\linux-arm" />
    <!-- Linux ARM64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\linux-arm64\**\*.*" Pack="true" PackagePath="runtimes\linux-arm64" />
    <!-- macOS x64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\osx-x64\**\*.*" Pack="true" PackagePath="runtimes\osx-x64" />
    <!-- macOS ARM64 native libraries -->
    <None Include="..\..\OwnAudioEngine\Ownaudio.Native\runtimes\osx-arm64\**\*.*" Pack="true" PackagePath="runtimes\osx-arm64" />
  </ItemGroup>

  <!-- Ensure Presets folder exists after build -->
  <Target Name="EnsurePresetsFolder" AfterTargets="Build">
    <MakeDir Directories="$(OutputPath)Presets" Condition="!Exists('$(OutputPath)Presets')" />
  </Target>

</Project>
